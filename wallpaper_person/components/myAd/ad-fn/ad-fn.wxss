/* 弹窗广告流量主 */

.p-ad{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  overflow: hidden;
  pointer-events: none;
}

.p-ad-bg{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}
.p-ad-box{
  width: 100%;
  height: 100%;
  pointer-events: auto;
}
.p-ad-box.hide{
  transform: translate(100%,0);
  
}

