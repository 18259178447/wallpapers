/* pages1/act-enroll/act-enroll.wxss */
@import "/utils/base.wxss";
.act-img{
  width: 100%;
  min-height: 400rpx;
}


.act-content{
  width: 650rpx;
  min-height: 400rpx;
  color: #61a397;
  border-top: 4rpx solid #61a397;
  border-bottom: 4rpx solid #61a397;
  border-left: 2rpx solid #61a397;
  border-right: 2rpx solid #61a397;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 32rpx 28rpx;
  font-family: "nomal";
  font-size: 32rpx;
}


.input-view{
  display: block;
  padding: 0 90rpx;
  margin-top: 80rpx;
}

.input-view__item{
  height: 72rpx;
  box-sizing: border-box;
  border: 2rpx solid #61a397;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  text-align: center;
  font-size: 36rpx;
  color: #61a397;
  font-family: Arial, Helvetica, sans-serif
}

.input-view__item input{
  display: block;
  height: 100%;
}
.input-view__placeholder{
  height: 100%;
  transform: translateY(-100%);
  line-height: 72rpx;
  text-align: center;
  pointer-events: none
}
.input-view__placeholder text{
  font-size: 18rpx;
}


.person-name{
  margin-right: 20rpx;
}

.person-price{
  margin-right: 46rpx;
}

.tip{
  font-size: 18rpx;
  margin-top: -16rpx;
  margin-bottom: 16rpx;
}


.input-view__submit{
  font-size: 44rpx;
  color: #fff;
  height: 72rpx;
  border-bottom: 3rpx solid #22554c;
  background-color: #61a397;
  line-height: 72rpx;
  border-radius: 16rpx;
  margin-top: 100rpx;
}

.input-view__submit text{
    font-size: 30rpx;
    
}

.contact-box{
  margin-top: 30rpx;
  padding-bottom: 90rpx;
}

.contact{
  font-size: 35rpx;
  color: #c75c5c;
  padding-left: 70rpx;
  background: url(data:image/png;base64,) 0 center no-repeat;
  background-size: 58rpx 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}