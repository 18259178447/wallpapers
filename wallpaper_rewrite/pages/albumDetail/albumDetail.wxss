/* pages/albumDetail/albumDetail.wxss */
@import "../../tpls/poster.wxss";
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.banner{
  position: relative
}
.banner image{
  width: 100%;
  display: block;
  /* height: 398rpx; */
  height: auto;
}
.banner .collect-btn{
  width: 52rpx;
  height: 52rpx;
  background:rgba(0, 0, 0, 0.3) url(https://minibizhi.313515.com/BiZhiStatic/icon-albumDetail-collect-on.svg) center center no-repeat;
  background-size: 46rpx 46rpx;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  border-radius: 50%;
  box-shadow:0px 0px 3px 1px rgba(255, 255, 255, 0.3);
}
.banner .collect-btn.on{
  background-image: url(https://minibizhi.313515.com/BiZhiStatic/icon-albumDetail-collect-active.svg)
}

.album-desc{
  width: 100%;
  box-sizing: border-box;
  background: #F2F2F2;
  font-size: 25rpx;
  color: #A0A0A0;
  line-height: 35rpx;
  padding:15rpx 22rpx;
  white-space:pre-wrap;
  margin-bottom: 16rpx;
}
.album-desc navigator{
  display: inline;
  color: blue
}

.comment-list .default{
  min-height: 50vh
}