/* pages/preview2/preview.wxss */
@import "../../tpls/poster.wxss";
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.footer-placehold {
  height: 138rpx;
}

.preview-swiper {
  height: 100%;
  /* background: url(https://minibizhi.313515.com/BiZhiStatic/loading.svg) center center no-repeat;
  background-size: 60rpx 60rpx; */
}
.emote-avatar-preview{
  background-color:#f2f2f2;
}
.emote-avatar-preview .preview-image{
    width: 100vw;
    height: 100vw;
    
}
.emote-avatar-preview .flexHV{
  padding-bottom: 98rpx;
  box-sizing: border-box
}
.iPhoneX .emote-avatar-preview .flexHV{
  padding-bottom: 146rpx;
}

.wallpaper-preview .preview-image {
  min-height: 100vh;
  width: 100%;
  position: relative;
}

.wallpaper-preview .preview-image image,.dynamic-wallpaper-view .preview-image image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url(https://minibizhi.313515.com/BiZhiStatic/loading.svg) center center no-repeat;
  background-size: 60rpx 60rpx;
}

.emote-avatar-preview .preview-image{
  background: url(https://minibizhi.313515.com/BiZhiStatic/loading.svg) center center no-repeat;
  background-size: 60rpx 60rpx;
}

.wallpaper-relative .author-info {
  padding-left: 30rpx;
  position: relative;
}

.wallpaper-relative .report-btn {
  width: 60rpx;
  height: 60rpx;
  background: url(https://minibizhi.313515.com/svg/icon-more.svg) center center no-repeat;
  background-size: 28rpx 6rpx;
}

.wallpaper-relative .labels {
  flex-wrap: wrap;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.wallpaper-relative .labels view {
  border: 1rpx solid #239efe;
  height: 49rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #239efe;
  line-height: 49rpx;
  text-align: center;
  padding: 0 20rpx;
  margin-left: 20rpx;
  margin-bottom: 16rpx;
}

.wallpaper-relative .labels view:nth-child(2) {
  color: #fc8c00;
  border-color: #fc8c00;
}

.wallpaper-relative .labels view:nth-child(3) {
  color: #3fc38b;
  border-color: #3fc38b;
}

.wallpaper-relative .labels view:nth-child(4) {
  color: #ff6168;
  border-color: #ff6168;
}

.wallpaper-relative .labels view:nth-child(5) {
  color: #bd10e0;
  border-color: #bd10e0;
}

.relative-intro .title {
  font-size: 32rpx;
  color: #949494;
  height: 84rpx;
  line-height: 84rpx;
  padding-left: 16rpx;
  margin-top: 20rpx;
}



.touxiang-mini-btn{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,380rpx);
  background-image: linear-gradient(-179deg, #FF7FC2 0%, #FC4477 100%, #FF5181 100%);
  box-shadow: 0 2rpx 8rpx 0 rgba(253,77,130,0.53);
  border-radius: 36rpx;
  width: 260rpx;
  height: 72rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 72rpx;
}

.dynamic-wallpaper-container{
  height: 100%;
  background-color:#f2f2f2;
  position: relative;
  overflow: hidden
}

.dynamic-wallpaper-view{
  width: 500rpx;
  height: 889rpx;
  box-shadow:0px 0px 3px 1px rgba(0, 0, 0, 0.3);
}
.dynamic-wallpaper-view .preview-image{
  height: 100%;
  width: 100%;
  position: relative;
}

.dynamic-wallpaper-view .video-btn{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  pointer-events: none;
  width: 122rpx;
  height: 122rpx;
}
.dynamic-wallpaper-view .wifi-tip{
  font-size: 20rpx;
  color: #FFFFFF;
  height: 42rpx;
  line-height: 42rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 21rpx;
  padding: 0 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
  margin-top: 86rpx;
}
.dynamic-wallpaper-container .preview-video{
  position: absolute;
  left: 100%;
  top: 0;
  bottom: 0;
  width: 100%;
}
.dynamic-wallpaper-container .preview-video.playing{
  transform: translate3d(-100%,0,0)
}

.dynamic-wallpaper-container .preview-video video{
  width: 500rpx;
  height: 889rpx;
  pointer-events:none;
  margin-bottom: 92rpx;
}

.guide-btn{
  font-size: 24rpx;
  color: #239EFE;
  line-height: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  padding: 0 22rpx 0 54rpx;
  z-index: 1;
  margin-top: 36rpx;
  background:#D4F1FF url(https://minibizhi.313515.com/BiZhiStatic/icon-preview-video-guide.svg) 22rpx center no-repeat;
  background-size: 24rpx 24rpx;
}



/* 分享奖励弹窗 */
.share-reward-popup{
  z-index: 999
}
.share-reward-popup .share-reward-content{
    position: relative;
}
.share-reward-popup .share-reward-content image:first-child{
  width: 644rpx;
  height: auto
}
.share-reward-popup .share-reward-content image:last-child{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  /* background-color: red; */
  bottom: 58rpx;
  width: 330rpx;
  height: 587.4rpx;
  border-radius: 15rpx;
  background: url(https://minibizhi.313515.com/BiZhiStatic/loading.svg) center center no-repeat;
  background-size: 60rpx 60rpx;
}
.share-reward-popup .btn-down{
  width: 328rpx;
  height: 94rpx;
  background: #5BEDC9;
  border-radius: 47rpx;
  line-height: 1.2;
  margin-top: 10rpx;
}
.share-reward-popup .btn-down text{
  display: block;
  color: #005C46;
}
.share-reward-popup .btn-down text:first-child{
  font-size: 36rpx;
  font-weight: 500;
}
.share-reward-popup .btn-down text:last-child{
  font-size: 20rpx;
  text-decoration-line: line-through
}
.share-reward-popup .tip{
  font-size: 24rpx;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.50);
  line-height: 35rpx;
  margin: 24rpx 0 26rpx 0
}
.share-reward-popup .btn-close image{
  width: 66rpx;
  height: 66rpx;
}

