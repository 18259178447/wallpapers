page,.container,scroll-view,.body,.swiper-list{
  height: 100%;
}
.body{
  overflow: hidden;
  /* background-color: red; */
}

/* 模块标题 */
.module-title {
  height: 32rpx;
  position: relative;
  padding-left: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #4c4c4c;
  line-height: 32rpx;
  vertical-align: middle;
  background: url(https://minibizhi.313515.com/BiZhiStatic/icon-all-more.svg) right center no-repeat;
  background-size: 80rpx 36rpx;
  text-align: left;
}

.module-title::before,.follow-nav-wrap .nav-title::before {
  width: 6rpx;
  height: 32rpx;
  position: absolute;
  left: 0;
  top: 0;
  background: #239EFE;
  content: '';
  display: block;
  border-radius: 6rpx;
}

/* 跳转到话题的蓝色文字按钮 */
.toTopicBtn {
  font-size: 32rpx;
  color: #239EFE;
  line-height: 46rpx;
  background: #f2f2f2;
  border-radius: 68rpx;
  padding: 0 20rpx;
  display: inline-block;
  box-sizing: border-box;
  margin-right: 20rpx;
}

.list-flex-wrap{
  padding:0 16rpx;
  display:flex;
  flex-wrap:wrap;
  justify-content:space-between;
}

/* 动态视频 */
.dynamic-image{
  position: relative;
}
.dynamic-image::before{
  position: absolute;
  content: '';
  display: block;
  width: 37rpx;
  height: 37rpx;
  left: 13rpx;
  top: 10rpx;
  background: url(https://minibizhi.313515.com/BiZhiStatic/icon-all-dynamic-video.svg) 0 0 no-repeat;
  background-size: cover;
  pointer-events: none;
}


/* 删除勾选 */
