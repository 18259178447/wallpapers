page {
    background: #24174b;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.bg {
    width: 100%;
    margin-top: -61rpx;
}

.title {
    font-size: 38rpx;
    text-align: center;
    color: #cfb752;
    font-weight: 700;
    margin-top: 19rpx;
}

.title view {
    position: relative;
    padding: 0 60rpx;
    width: 240rpx;
    margin: 0 auto;
}

.title image {
    width: 60rpx;
    position: absolute;
    top: -8rpx;
}

.ab_left {
    left: 0;
}

.ab_right {
    right: 0;
}

.content {
    width: 91%;
    left: 50%;
    transform: translateX(-50%);
    position: absolute;
    bottom: 0;
    top: 561rpx;
    background: white;
}

scroll-view {
    width: 100%;
    height: 100%;
}

.items {
    width: 32%;
    margin-bottom: 10rpx;
}

.nei {
    display: flex;
    flex-flow: row wrap;
    padding: 30rpx 20rpx;
    justify-content: space-around;
}

.items image {
    width: 100%;
}

swiper {
    position: absolute;
    top: 42rpx;
    left: 0;
    z-index: 100;
    width: 100%;
    height: 100%;
}

swiper-item image {
    width: 190rpx;
}

@-webkit-keyframes zhuan {
    from {
        transform: translateX(-50%) rotate(0deg);
    }

    to {
        transform: translateX(-50%) rotate(360deg);
    }
}

@keyframes zhuan {
    from {
        transform: translateX(-50%) rotate(0deg);
    }

    to {
        transform: translateX(-50%) rotate(360deg);
    }
}