.bg {
    position: fixed;
    top: 0%;
    width: 100%;
    height: 100%;
    left: 0;
    right: 0;
    z-index: -1;
}

.item {
    width: 90%;
    display: flex;
    margin: 30rpx auto;
    border-radius: 20rpx;
    height: 180rpx;
    position: relative;
    background: white;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 10rpx 50rpx;
}

.left {
    padding-top: 10rpx;
}

.desc {
    font-size: 25rpx;
    margin-top: 10rpx;
}

.right {
    padding-top: 35rpx;
    color: white;
}

.iconfont {
    color: #20445e;
    position: absolute;
    top: 52rpx;
    right: 15rpx;
    font-size: 50rpx;
}

.iconfont {
    color: white;
}

.num {
    position: absolute;
    right: 96rpx;
    top: 136rpx;
    color: white;
    font-size: 20rpx;
}

.guanggao {
    width: 100%;
    height: 170rpx;
    background: white;
    position: fixed;
    bottom: 46rpx;
}

.co {
    position: absolute;
    top: 0;
    right: 0;
    line-height: 20rpx;
    font-size: 28rpx;
    background: rgba(0,0,0,.3);
    height: 30rpx;
    width: 30rpx;
    text-align: center;
    color: white;
    z-index: 999;
}