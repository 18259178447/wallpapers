.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.tabbar {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    border-top: 1rpx rgba(0,0,0,.2) solid;
    padding-top: 10rpx;
    z-index: 888;
    background: #0e081a;
}

.tabbar image {
    width: 70rpx;
    height: 70rpx;
}

.tabbar .item {
    flex: 1;
    text-align: center;
    font-size: 25rpx;
    padding: 20rpx 0 10rpx;
    position: relative;
}

.item .fe {
    width: 105rpx;
    height: 105rpx;
    position: absolute;
    left: 50%;
    top: 1rpx;
    transform: translateX(-50%);
    animation: zhuan 4s infinite linear;
}