@import "../../__wuBaseWxss__/0.wxss";

.common-box {
    margin-bottom: 150rpx;
}

.top_img_box {
    width: 100%;
    height: 354rpx;
    overflow: hidden;
    margin-bottom: 4vw;
    position: relative;
}

.top_img_box image {
    position: absolute;
    width: 100vw;
    height: 55vw;
    margin: -26vw 0 0 -50vw;
    top: 50%;
    left: 50%;
}

.list {
    width: 92vw;
    height: 900rpx;
    margin: 0 auto;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}

.l_item {
    width: 44vw;
    height: 44vw;
    float: left;
    margin-bottom: 4vw;
    padding: 0;
}

.l_item:nth-of-type(even) {
    margin-left: 4vw;
}

.l_item image {
    width: 100%;
    box-shadow: 0 0 6rpx #333;
    border-radius: 8rpx;
}

.bottom-btns {
    width: 100%;
    height: 150rpx;
    column-count: 2;
    column-gap: 5rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    background: #fff;
}

.bottom-btns .btn-box {
    height: 150rpx;
    text-align: center;
    font-size: 28rpx;
    background: #fff;
    font-weight: bold;
    overflow: hidden;
}

.bottom-btns .btn-box image {
    display: block;
    margin: 8rpx auto;
    width: 52rpx;
    height: 52rpx;
}