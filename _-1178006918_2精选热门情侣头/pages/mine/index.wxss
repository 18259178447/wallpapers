@import "../../__wuBaseWxss__/0.wxss";

.top_box {
    width: 100%;
    height: 470rpx;
    position: relative;
}

.top_box .bg {
    width: 100%;
    height: 432rpx;
    display: block;
    position: relative;
    z-index: 1;
}

.user_box {
    width: 100%;
    height: 236rpx;
    position: absolute;
    bottom: 0rpx;
    left: 0rpx;
    z-index: 2;
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
}

.user_box image {
    display: block;
    margin: 4rpx auto 10rpx;
    width: 172rpx;
    height: 172rpx;
    border-radius: 50%;
    border: solid 4rpx #fff;
}

.op_list_box {
    width: 672rpx;
    margin: 52rpx auto;
}

.op_list_box .o_item {
    width: 100%;
    height: 116rpx;
    line-height: 116rpx;
    font-size: 32rpx;
    overflow: hidden;
}

.op_list_box .o_item image {
    width: 64rpx;
    height: 56rpx;
    display: block;
    margin: 32rpx 28rpx 0 10rpx;
    float: left;
}