.cardlayout {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    border: 0;
    overflow: hidden;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.llads {
    margin: 10rpx;
    width: 730rpx;
    overflow: hidden;
}

.swiper {
    width: 100%;
    height: 400rpx;
    margin-bottom: 30rpx;
}

.lanmu {
    display: block;
    margin: 0 auto;
    text-align: center;
    padding: 10rpx;
}

.recommend {
    width: 710rpx;
    height: 160rpx;
}

.cardbox {
    display: flex;
    padding-top: 30rpx;
    flex-flow: row wrap;
}

.cardli {
    display: block;
    width: 40%;
    margin-left: 6%;
    height: 250rpx;
    margin-bottom: 30rpx;
}

.cardimg {
    width: 100%;
    height: 200rpx;
    border-radius: 10rpx;
    box-shadow: 10rpx 5rpx 5rpx #ccc;
}

.cardtext {
    display: block;
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #626262;
    margin-top: 15rpx;
    letter-spacing: 2rpx;
}

.llist {
    width: 710rpx;
    height: 160rpx;
}

.mingzi {
    margin-top: 50rpx;
    font-size: 28rpx;
    color: #9a9a9a;
    text-align: center;
    margin-bottom: 50rpx;
    letter-spacing: 5rpx;
}

.toplayout {
    padding: 5rpx;
    background-color: #BA0624;
}

.hdtop {
    border: 0;
    border-radius: 0;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    height: 70rpx;
    line-height: 70rpx;
    letter-spacing: 5rpx;
    background-color: #BA0624;
    border: 1rpx solid #fff;
}

.hdtop:after {
    border: 0;
    border-radius: 0;
}

.hongbao {
    border: 0;
    border-radius: 0;
    background: none;
    position: fixed;
    top: 40%;
    right: 5rpx;
    width: 180rpx;
    height: 150rpx;
    -webkit-animation: rubberBand 2s infinite;
}

@keyframes rubberBand {
    0% {
        transform: scaleX(1);
    }

    30% {
        transform: scale3d(1.25,0.75,1);
    }

    40% {
        transform: scale3d(0.75,1.25,1);
    }

    50% {
        transform: scale3d(1.15,0.85,1);
    }

    65% {
        transform: scale3d(0.95,1.05,1);
    }

    75% {
        transform: scale3d(1.05,0.95,1);
    }

    to {
        transform: scaleX(1);
    }
}

.hongbaoimg {
    width: 100%;
    height: 100%;
}

.hongbao::after {
    border: 0;
}