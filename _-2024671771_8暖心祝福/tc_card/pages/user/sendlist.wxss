page {
    background-color: #f5f5f5;
}

.cardbox {
    display: flex;
    padding-top: 30rpx;
    flex-direction: row;
    flex-wrap: wrap;
    margin-bottom: 200rpx;
}

.item {
    width: 300rpx;
    height: 540rpx;
    margin-left: 50rpx;
}

.item image {
    width: 100%;
    height: 80%;
    border-radius: 10rpx;
    box-shadow: 10rpx 30rpx 40rpx #CCC;
}

.cardname {
    display: block;
    text-align: left;
    width: 100%;
    color: #897D88;
    font-size: 32rpx;
}

.times {
    display: block;
    text-align: center;
    font-size: 22rpx;
    text-align: left;
    color: #897D88;
}