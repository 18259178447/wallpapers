page {
    background-color: #EEE;
}

.edbox {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.llads {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.sunbox {
    display: flex;
    flex-direction: row;
    background-color: #FFF;
    margin-bottom: 15rpx;
    padding: 20rpx;
    color: #666;
    font-size: 30rpx;
    box-shadow: 0 5rpx 10rpx #DDD;
}

.nickname {
    text-align: center;
    margin-right: 30rpx;
    line-height: 110rpx;
}

.avatar {
    position: relative;
    width: 110rpx;
    height: 110rpx;
}

.avatar image {
    width: 100%;
    height: 100%;
}

.edimg {
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: center;
    width: 110rpx;
    background-color: #000;
    color: #FFF;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 25rpx;
}

.lefttext {
    width: 180rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    margin-right: 30rpx;
}

.inputboxs {
    height: 50rpx;
    width: 100%;
    font-size: 30rpx;
    color: #9d9d9d;
}

.desc {
    font-size: 30rpx;
    padding: 15rpx;
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    color: #9a9a9a;
    margin-bottom: 10rpx;
    margin-left: 20rpx;
}

.edtextarea {
    font-size: 30rpx;
    width: 92%;
    padding: 30rpx;
    height: 200rpx;
    background-color: #FFF;
}

.zhufubox {
    display: flex;
    direction: row;
    font-size: 30rpx;
    color: #666;
    padding: 30rpx;
    letter-spacing: 2rpx;
}

.touchtext {
    letter-spacing: 5rpx;
    margin-left: 10rpx;
    text-decoration: underline;
    color: #BA0624;
}

.voice {
    display: flex;
    direction: row;
    padding: 30rpx;
    background-color: #FFF;
}

.voibox {
    height: 70rpx;
    width: 70rpx;
    padding: 30rpx;
    border-radius: 100%;
    border: 1px solid #CCC;
}

.voiover {
    height: 110rpx;
    width: 110rpx;
    border-radius: 100%;
    margin-top: 5rpx;
}

.vlimg {
    width: 100%;
    height: 100%;
}

.vlon {
    color: #E94F4F;
}

.destext {
    display: flex;
    flex-direction: column;
    font-size: 30rpx;
    height: 100rpx;
    margin-left: 30rpx;
    line-height: 40rpx;
    margin-top: 20rpx;
    flex: 1;
}

.delbtn {
    justify-content: flex-end;
    height: 70rpx;
    font-size: 28rpx;
    background-color: #BA0624;
    color: #FFF;
    line-height: 70rpx;
    margin-top: 20rpx;
}

.tosave {
    width: 600rpx;
    height: 100rpx;
    letter-spacing: 5rpx;
    margin: 0 auto;
    margin-top: 50rpx;
    margin-bottom: 20rpx;
    color: #FFF;
    background-color: #BA0624;
    text-align: center;
    line-height: 100rpx;
    font-size: 35rpx;
}