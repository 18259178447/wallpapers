.cardbox {
    display: flex;
    flex-direction: row;
    padding-top: 30rpx;
    flex-wrap: wrap;
    margin-bottom: 200rpx;
}

.cardli {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 300rpx;
    height: 450rpx;
    margin-left: 50rpx;
}

.cardimg {
    width: 300rpx;
    height: 400rpx;
    border-radius: 5rpx;
    box-shadow: 10rpx 15rpx 20rpx #ccc;
}

.cardtext {
    position: absolute;
    display: block;
    bottom: 50rpx;
    width: 300rpx;
    margin-top: 15rpx;
    text-align: center;
    font-size: 28rpx;
    color: #FFF;
    background-color: rgba(0,0,0,0.6);
    letter-spacing: 2rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-bottom-left-radius: 5rpx;
    border-bottom-right-radius: 5rpx;
}

.fooclick {
    display: -webkit-flex;
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    justify-content: center;
}

.fooclick image {
    width: 30rpx;
    height: 30rpx;
    margin-top: 8rpx;
}

.fooclick text {
    padding-left: 10rpx;
    color: #C0AB90;
    font-size: 25rpx;
}

.adbox {
    width: 700rpx;
    margin-left: 20rpx;
    margin-bottom: 30rpx;
}