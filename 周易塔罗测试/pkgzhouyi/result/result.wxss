page {
    height: auto;
    width: 100%;
    background: url("http://r.itiexue.net/tiexue/wechatapp/suangua/dbg1.png") no-repeat;
    background-size: 100%;
}

.r-cont {
    padding: 0 5%;
    margin: 0 auto;
    background: url(http://r.itiexue.net/tiexue/wechatapp/suangua/detaildb.png) no-repeat;
    background-position: bottom center;
}

.r-top {
    position: relative;
    margin: 0 auto;
    display: block;
    background: url("http://r.itiexue.net/tiexue/wechatapp/suangua/wenwang.png") no-repeat;
    background-size: 100%;
    box-sizing: border-box;
    padding: 28% 10%;
}

.r-top .txt {
    width: 100%;
    height: 85%;
    overflow-y: auto;
    line-height: 1.5;
    font-size: 18px;
    text-indent: 2em;
}

.r-top .txt::-webkit-scrollbar {
    display: none;
}

.r-top button {
    position: absolute;
    width: 200rpx;
    height: 60rpx;
    right: 10%;
    bottom: 22%;
    background: none;
    border: none;
}

.r-topInfo {
    width: 90%;
    margin: 50rpx auto;
}

.r-topInfo .item {
    width: 100%;
    display: block;
    line-height: 60rpx;
    margin-bottom: 20rpx;
}

.r-topInfo .item span {
    border-radius: 6px;
    background: #54221b;
    padding: 4rpx 20rpx;
    display: inline-block;
    color: #fff;
    font-size: 18px;
}

.r-topInfo text {
    font-size: 17px;
    margin-left: 20rpx;
}

.r-lan {
    width: 100%;
    height: 22rpx;
    margin-bottom: 30rpx;
    background: url("http://r.itiexue.net/tiexue/wechatapp/suangua/lj.png") no-repeat;
    background-size: 100%;
}

.r-gua {
    font-size: 16px;
}

.r-gua .r-gua-item:first-child {
    color: #850303;
    font-weight: bold;
    font-size: 18px;
}

.r-gua-item {
    margin-bottom: 20rpx;
    display: -webkit-box;
}

.r-gua-item .r-gua-a {
    width: 0;
    display: block;
    -webkit-box-flex: 3.5;
    vertical-align: middle;
}

.r-gua-item .r-gua-a:first-child {
    -webkit-box-flex: 1;
}

.r-gua-item p {
    display: inline-block;
    width: 40%;
    height: 16rpx;
    position: relative;
    top: -2rpx;
    margin-right: 4rpx;
}

.r-gua-item .r-gua-a-t {
    display: inline-block;
    font-size: 15px;
}

.r-gua-item span {
    height: 100%;
    background: #000;
    display: inline-block;
}

.r-gua-item .xg0 {
    width: 49%;
    float: left;
}

.r-gua-item .xg0::before {
    content: '';
    width: 49%;
    margin-left: 2%;
    height: 100%;
    position: absolute;
    background: #000;
    top: 0;
    right: 0;
}

.r-gua-item .xg1 {
    width: 100%;
}

.r-gua-ban {
    text-align: center;
    margin-bottom: 26rpx;
}

.wxParse-tr {
    font-size: 18px;
}

.wxParse-tr .wxParse-td:first-child {
    display: inline-block;
}

.wxParse-tr .wxParse-td:last-child {
    display: inline-block;
    box-sizing: border-box;
    padding-left: 16rpx;
}

.ex-item {
    height: auto;
    overflow: hidden;
    margin-bottom: 20rpx;
    line-height: 1.6;
}

.ex-able {
    width: 17%;
    font-size: 36rpx;
    float: left;
}

.ex-text {
    width: 83%;
    font-size: 32rpx;
}

.ex-item2 .ex-able {
    width: 26%;
}

.ex-item2 .ex-text {
    width: 74%;
}

.btnBox {
    text-align: center;
    margin-bottom: 55px;
}

.btnBox button {
    width: 80%;
    border: none;
    margin-bottom: 15px;
}

.btnBox .btn1 {
    background: url("http://r.itiexue.net/tiexue/wechatapp/suangua/more.png") no-repeat;
    background-size: 100%;
}

.btnBox .btn2 {
    background: url("http://r.itiexue.net/tiexue/wechatapp/suangua/share.png") no-repeat;
    background-size: 100%;
}

view {
    overflow: hidden;
}