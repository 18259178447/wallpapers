@import "../common.wxss";
.imagebox {
    position: relative;
    width: 100%;
    height: 100%;
    background: black;
}

.btnbox {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50px;
    line-height: 40px;
    color: white;
    text-align: center;
}

.savebtn {
    display: inline-block;
    height: 36px;
    line-height: 24px;
    border: 1px solid white;
    padding: 5px 10px;
    box-sizing: border-box;
    font-size: 16px;
    border-radius: 5px;
}

.resultimg {
    width: 0px;
    display: block;
}

.savetipsbox {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}

.savetips {
    width: 110px;
    height: 110px;
    position: absolute;
    left: 50%;
    top: 40%;
    transform: translate(-50%,-50%);
}

.maxwidth {
    position: absolute;
    width: 100%!important;
    height: auto;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}

.white {
    background-color: rgba(0,0,0,0.4);
}

.maxheigth {
    width: 100%!important;
    height: auto;
    left: 0;
    top: 0;
}

.gray {
    background-color: rgba(0,0,0,0.4);
}

.saveMenuBox {
    position: fixed;
    width: 100%;
    height: 125px;
    left: 0;
    z-index: 100;
    text-align: center;
    background: white;
}

.hidemenu {
    bottom: -125px;
}

.showmenu {
    bottom: 0px;
}

.hideqrcode {
    display: none;
}