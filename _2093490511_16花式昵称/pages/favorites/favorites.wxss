.container {
    position: absolute;
    padding-bottom: 0;
    width: 100%;
    min-height: 100%;
    background-color: #F8F8F8;
}

.section {
    width: 94%;
    margin: 10px auto 10px auto;
}

.section-title {
    font-size: 28rpx;
    color: #444;
    font-weight: 500;
    margin-bottom: 24rpx;
}

.ended-list-item {
    position: relative;
    margin-bottom: 24rpx;
    height: 80rpx;
    background-color: #fff;
    border-radius: 4px;
    box-shadow: 0px 1px 4px #D8DDE5;
    line-height: 80rpx;
    overflow: hidden;
}

.ended-list-avatar {
    position: relative;
    margin: 10rpx 16rpx 0 10rpx;
    float: left;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
}

.ended-list-img {
    position: absolute;
    top: -3%;
    left: -3%;
    width: 106%;
    height: 106%;
}

.ended-list-text {
    color: #666;
    margin-left: 20rpx;
    float: left;
    font-size: 26rpx;
}

.ended-list-icon {
    float: right;
    margin-top: 10rpx;
    margin-right: 10rpx;
    width: 60rpx;
    height: 60rpx;
}

.ended-list-icon image {
    width: 100%;
    height: 100%;
    color: #D2D6DE;
}