/* 弹窗广告流量主 */

.ad{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  overflow: hidden;
  pointer-events: none;
}
.ad__box{
  width: 100%;
  height: 100%;
  pointer-events: auto;
}
.ad__box_hide{
  transform: translate(100%,0);
}
.ad__bg{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
}

.ad__body{
  background: #FFFFFF;
  border-radius: 12rpx;
  max-width: 730rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-60%);
}
.ad__close-btn{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 38rpx;
  height: 38rpx;
  background: url(data:image/svg+xml;base64,) center center no-repeat;
  background-size: 38rpx;

}
.wx-ad__view{
  position: relative;
}
.wx-ad__view-mask{
  position: absolute;
  width: 120rpx;
  height: 50rpx;
  left: 0;
  top: 0;
}
.wx-ad__title{
  font-size: 38rpx;
  color: #4C4C4C;
  text-align: center;
  font-weight: bold;
  line-height: 53rpx;
  margin-bottom: 10rpx;
}
.wx-ad__explain{
  font-size: 28rpx;
  margin-bottom: 30rpx;
  color: rgb(250, 25, 25);
  text-align: center;
}
.wx-ad__explain2{
    font-size: 20rpx;
  color: rgb(250, 25, 25);
  text-align: center;
  margin-top: 15rpx;
}
.mini-ad__image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  display: block;
}
.mini-ad__title{
  font-size: 38rpx;
  color: #4C4C4C;
  text-align: center;
  font-weight: bold;
  line-height: 53rpx;
  margin: 20rpx 0 30rpx 0
}
.mini-ad__explain{
  font-size: 30rpx;
  text-align: center;
  /* color: #4C4C4C; */
  line-height: 42rpx;
}

.mini-ad__explain_skin_blue{
  color: rgb(250, 25, 25);
}
.mini-ad__btn{
  width: 540rpx;
  height: 88rpx;
  border-radius: 10rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
  background-color: rgb(250, 25, 25);
  margin-top: 40rpx;
}
