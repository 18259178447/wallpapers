/* components/image-preview/image-preview.wxss */
.preview{
  min-height: 100vh;
  background-color: #181824
}

.preview-swiper-item{
  display: flex;
  justify-content: center;
  align-items: center
}

.preview-thumbnail{
  width: 100%;
  min-height:100%;
  position: relative;
}

.preview-high-definition{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  background:url(data:image/svg+xml;base64,) center center no-repeat;
  background-size:60rpx 60rpx;
}