@import "../../utils/base.wxss";
.user-info{
  height: 200rpx;
  padding-left: 27.5rpx;
  /* border-bottom: 1rpx solid #a7a7b3 */
}

.user-info__avatar{
  width:102rpx;
  height: 102rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.user-info__nickname{
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}


.my-title{
  height: 74rpx;
  text-align: center;
  line-height: 74rpx;
  color: #a7a7b3;
  font-size: 36rpx;
  font-weight: bold;
}

.my-btns{
  margin-top: 20rpx;
}

.my-btns__item{
  height: 102rpx;
  /* background-image: #3a3a46; */
  color: #a7a7b3;
  text-align: left;
  font-size: 28rpx;
  line-height: 102rpx;
  padding-left: 84rpx;
  position: relative;
  background: 27.5rpx center no-repeat;
  background-size: 48rpx;
}
.my-btns__item::before{
  position: absolute;
  top: 50%;
  right: 27.5rpx;
  content: "";
  width: 34rpx;
  height: 34rpx;
  background: url(data:image/svg+xml;base64,) center center no-repeat;
  background-size: 28rpx;
  transform: translateY(-50%);
}
