/* pages/search/search.wxss */
@import "../../components/header/share-search/share-search";

.search__input{
  margin:0 28rpx 0 10rpx;
  color: #e7e7f1
}
.search-reset{
  position: absolute;
  right: 0;
  top: 0;
  width: 58rpx;
  height: 100%;
  background: url(data:image/svg+xml;base64,) center center no-repeat;
  background-size: 32rpx;
}

.search-keys{
  padding-left: 28rpx;
}

.search-keys__name{
  height: 92rpx;
  line-height: 92rpx;
  font-size: 28rpx;
  color: #c7cad3;
}

.search-keys__item{
  padding: 0 20rpx;
  background: #242730;
  border-radius: 4rpx;
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  font-size: 28rpx;
  color: #c6c9ce;
  margin: 0 20rpx 20rpx 0;
}




.search-result{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}