page {
    background-color: #efefef;
}

.mainBody {
    width: 95%;
    margin: 10rpx auto 0rpx;
    background-color: #fff;
}

.brb {
    border-bottom: 1rpx solid #cdcdcd;
}

.itemType {
    color: #16ba63;
    font-size: 34rpx;
    margin-bottom: 40rpx;
}

.HeadImg {
    width: 300rpx;
    height: 172rpx;
}

.item_info_wrapper {
    flex: 1;
    margin-left: 20rpx;
    width: 60%;
}

.itemName {
    color: #4d4d4d;
    font-size: 32rpx;
    font-weight: 500;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 80rpx;
    line-height: 80rpx;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.item_time_wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 10rpx;
}

.item_time_wrapper view:first-child {
    font-size: 30rpx;
    color: #828282;
}

.item_time_wrapper view:last-child {
    font-size: 34rpx;
}

.btnArr {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    padding: 25rpx 0rpx;
}

.btnArr button {
    margin-right: 20rpx;
}

.btnArr .examine {
    font-size: 32rpx;
    flex: 1;
    text-align: left;
    padding-left: 30rpx;
    line-height: 70rpx;
}

.noOrder {
    width: 100%;
    margin-top: 200rpx;
    text-align: center;
    font-size: 30rpx;
    color: #8b8b8b;
    letter-spacing: 3rpx;
}

.noOrder image {
    width: 400rpx;
    height: 230rpx;
}