<view>
    <scroll-view scrollX class="bg-white nav">
        <view class="flex text-center">
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==1?'text-green cur':''}}" data-index="1" style="color:{{currentIndex==1?farmSetData.background_color:''}};">
                全部
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==2?'text-green cur':''}}" data-index="2" style="color:{{currentIndex==2?farmSetData.background_color:''}};">
                待参加
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==3?'text-green cur':''}}" data-index="3" style="color:{{currentIndex==3?farmSetData.background_color:''}};">
                待审核
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==4?'text-green cur':''}}" data-index="4" style="color:{{currentIndex==4?farmSetData.background_color:''}};">
                待支付
            </view>
        </view>
    </scroll-view>
    <view wx:if="{{orderList.length>0}}">
        <view class="mainBody" wx:for="{{orderList}}" wx:key="id">
            <view class="ptl30 brb">
                <view class="flex mt20">
                    <image class="HeadImg" src="{{item.active.cover}}"></image>
                    <view class="item_info_wrapper">
                        <view class="itemName">{{item.active.title}}</view>
                        <view class="flex mt10 f28 cf93">{{item.active.address}}</view>
                        <view class="item_time_wrapper">
                            <view>{{item.active.start_time}}　{{item.active.week}}</view>
                            <view style="color: #16BA63;" wx:if="{{item.total_price>0}}">￥{{item.total_price}}</view>
                            <view style="color: #16BA63;" wx:else>免费</view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="btnArr">
                <view class="examine" style="color: #16BA63" wx:if="{{item.is_check==0&&item.is_pay==1}}">等待主办方审核</view>
                <view class="examine" style="color: #16BA63" wx:if="{{item.apply_delete==2}}">订单已取消</view>
                <view class="examine" style="color: #16BA63" wx:if="{{item.is_check==3}}">订单完成</view>
                <button bindtap="cancelOrder" class="cu-btn round line-gray button-hover" data-orderid="{{item.id}}" wx:if="{{item.is_pay==0&&item.apply_delete==0}}">取消订单</button>
                <button bindtap="nowPay" class="cu-btn round line-blue" data-orderid="{{item.id}}" style="color:{{farmSetData.background_color}}" wx:if="{{item.is_pay==0&&item.apply_delete==0}}">立即支付</button>
                <button class="cu-btn round line-gray button-hover" wx:if="{{item.is_check==0&&item.is_pay==1}}">审核中</button>
                <button bindtap="seeTicket" class="cu-btn round line-blue" data-orderid="{{item.id}}" style="color:{{farmSetData.background_color}}" wx:if="{{item.is_check==1&&item.is_pay==1}}">我的电子票</button>
            </view>
        </view>
    </view>
    <view wx:else>
        <view class="noOrder">
            <image src="/kundian_farm/images/icon/none.png"></image>
            <view>暂时还没有相关的订单</view>
        </view>
    </view>
</view>
