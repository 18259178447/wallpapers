page {
    background: #f3f3f3;
}

.main {
    width: 94%;
    margin: 30rpx auto;
    background: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.mian_title {
    padding: 30rpx 0;
    border-bottom: 1rpx solid #BEBEBE;
}

.mian_title view:first-child {
    font-size: 32rpx;
    color: #373737;
}

.mian_title view:last-child {
    font-size: 32rpx;
    color: #6B6B6B;
    margin-top: 15rpx;
}

.main_ewm {
    padding: 30rpx 0 70rpx;
    border-bottom: 1rpx dashed #BEBEBE;
    text-align: center;
}

.main_ewm view {
    font-size: 30rpx;
    color: #151515;
}

.main_ewm image {
    width: 300rpx;
    height: 300rpx;
    margin-top: 30rpx;
    box-shadow: 0 0 5rpx rgba(0,0,0,0.3);
}

.base_info {
    padding: 30rpx 0;
    font-size: 32rpx;
    color: #4C4C4C;
}

.base_info:not(:last-child) {
    border-bottom: 1rpx solid #AFAFAF;
}

.concel {
    width: 94%;
    margin: 80rpx auto 0rpx;
    font-size: 34rpx;
    text-align: center;
    padding: 20rpx 0;
    color: #3F3F3F;
    letter-spacing: 2rpx;
    background: #fff;
}