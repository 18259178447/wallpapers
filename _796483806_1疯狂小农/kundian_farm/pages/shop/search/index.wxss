.search {
    width: 100%;
    height: 90rpx;
    overflow: hidden;
    background: #f4f4f4;
}

.search_wrapper {
    width: 85%;
    margin: 15rpx auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.search_input {
    width: 85%;
    height: 60rpx;
    border-radius: 5rpx;
    font-size: 30rpx;
    color: #666;
    background: #fff;
    padding-left: 15rpx;
    box-sizing: border-box;
    line-height: 50rpx;
}

.search_text {
    font-size: 30rpx;
    color: #333;
    width: 10%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background: none;
    border: none;
    padding: 0;
}

.search_text::after {
    border: none;
}

.his_header {
    width: 90%;
    margin: 20rpx auto;
    font-size: 28rpx;
    color: #666;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.his_main {
    width: 90%;
    margin: 20rpx auto;
    font-size: 28rpx;
    color: #999;
}

.his_wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.his_item {
    padding: 12rpx;
    background: #f7f7f7;
    font-size: 24rpx;
    color: #333;
    margin-right: 20rpx;
    border-radius: 3rpx;
    margin-bottom: 20rpx;
}