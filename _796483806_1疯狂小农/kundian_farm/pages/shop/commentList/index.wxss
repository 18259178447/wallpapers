page {
    font-size: 28rpx;
}

.goods-comment .c-content {
    width: 94%;
    margin-left: 3%;
    padding: 20rpx 0 20rpx 0;
    border-bottom: 1rpx solid #f4f4f4;
}

.goods-comment .c-head {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}

.c-head text {
    margin-left: 20rpx;
    position: relative;
    top: -10rpx;
}

.c-head image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.goods-comment .c-c-center {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    color: gray;
    font-size: 24rpx;
}

.c-c-center .c-spec {
    margin-left: 40rpx;
}

.goods-comment .c-imgs image {
    width: 167rpx;
    height: 167rpx;
    float: left;
    margin-right: 10rpx;
    margin-top: 10rpx;
    border-radius: 5rpx;
}

.clear {
    clear: both;
}