@import "../../../../../__wuBaseWxss__/1.wxss";

page {
    background: #f4f4f4;
}

.detail-top {
    width: 100%;
    height: 180rpx;
    background: white;
    background: linear-gradient(to right,orange,red);
    color: white;
    font-size: 28rpx;
}

.detail-top .t-status {
    width: 50%;
    text-align: center;
    font-size: 32rpx;
}

.detail-top .icon {
    width: 50%;
    text-align: center;
}

.detail-top .icon .icon-fukuan {
    width: 70rpx;
    height: 120rpx;
}

.icon .icon-package {
    width: 150rpx;
    height: 120rpx;
}

.icon .icon-Shipping {
    width: 180rpx;
    height: 120rpx;
}

.icon .icon-sorry {
    width: 120rpx;
    height: 120rpx;
}

.line {
    width: 100%;
    height: 10rpx;
}

.telephone {
    width: 28rpx;
    height: 45rpx;
}

.block20 {
    height: 20rpx;
    background-color: #f4f4f4;
}

.headImg {
    width: 150rpx;
    height: 150rpx;
    border-radius: 15rpx;
}

.itemName {
    font-size: 28rpx;
    color: #3e3e3e;
    width: 450rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.w300 {
    text-align: right;
    width: 250rpx;
}

.confirm {
    width: 180rpx;
    border: none;
    color: #fff;
    background-color: #fc8535;
    line-height: 2;
    font-size: 30rpx;
    margin-right: 30rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.confirm::after {
    border: none;
}

.add-letf {
    width: 10%;
}

.phone {
    color: gray;
    font-size: 28rpx;
}

.add-right {
    width: 90%;
    height: 100%;
    font-size: 28rpx;
    color: #565656;
}

.order-li {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: rgb(170,170,170);
    font-size: 24rpx;
}

.order-pay {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: rgb(71,70,70);
    font-size: 28rpx;
    border-bottom: 1rpx solid #f4f4f4;
}

.order-pay .pay-val {
    color: #09BB07;
}

.order-remark {
    width: 100%;
    height: auto;
    font-size: 26rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.order-info {
    width: 100%;
    height: auto;
    font-size: 26rpx;
    padding-top: 20rpx;
    background: white;
    margin-bottom: 90rpx;
}

.order-info .info-title {
    width: 90%;
    margin-left: 3%;
    border-left: 5rpx solid #09BB07;
    height: 30rpx;
    line-height: 30rpx;
    padding-left: 2%;
    margin-bottom: 20rpx;
    font-size: 28rpx;
}

.order-info .info-li {
    width: 95%;
    margin-left: 5%;
    display: flex;
    height: 70rpx;
    line-height: 70rpx;
    color: gray;
}

.order-info .info-li .info-li-left {
    width: 30%;
}

.order-info .info-li .info-li-right {
    width: 60%;
}

.order-copy {
    font-size: 26rpx;
}