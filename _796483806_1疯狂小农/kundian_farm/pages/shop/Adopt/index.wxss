.card-swiper {
    height: 600rpx;
    position: relative;
    top: -200rpx;
    z-index: 999999999;
}

.index_container {
    width: 100%;
    height: 100vh;
    position: relative;
    overflow: hidden;
}

.cover_container {
    width: 100%;
    height: 60%;
    overflow: hidden;
    position: relative;
}

.bgImg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0%;
    left: 0%;
    z-index: 99;
}

.gradual {
    width: 100%;
    height: 170rpx;
    background-color: #fff;
    position: absolute;
    left: 0;
    bottom: 0rpx;
    z-index: 150;
    -webkit-mask-image: -webkit-gradient(linear,center bottom,center top,from(rgba(0,0,0,1)),to(rgba(0,0,0,0)));
}

.scrollView {
    width: 100%;
    height: 100%;
}

.scroll-img-container {
    margin: 80rpx auto;
    width: 90%;
    height: 675rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 0 25rpx rgba(10,10,10,0.7);
    position: relative;
}

.animalSrc {
    width: 100%;
    height: 100%;
}

.animal_name {
    width: 100%;
    line-height: 60rpx;
    color: #333;
    text-align: center;
    position: absolute;
    z-index: 999;
    bottom: 0;
    left: 0;
    font-size: 36rpx;
    letter-spacing: 3rpx;
    background: rgba(255,255,255,0.5);
    border-radius: 0 0 20rpx 20rpx;
}

page {
    background: #f3f3f3;
}

.adopt_wrapper {
    width: 94%;
    margin: 30rpx auto 0;
    border-radius: 20rpx;
    box-shadow: 0rpx 2rpx 12rpx rgba(0,0,0,0.3);
    background: #fff;
}

.adopt_wrapper image {
    width: 100%;
    height: 705rpx;
    border-radius: 20rpx 20rpx 0 0;
}

.desc_wrapper {
    padding: 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx dashed #959595;
}

.desc_wrapper view:first-child {
    font-size: 36rpx;
    color: #4b4b4b;
    font-weight: 500;
    margin-bottom: 15rpx;
}

.desc_wrapper view:last-child {
    font-size: 30rpx;
    color: #5d5d5d;
}

.footer {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 20rpx 0;
}

.footer .item {
    width: 33.3%;
    text-align: center;
    font-size: 30rpx;
    position: relative;
}

.footer .item:not(:last-child):after {
    content: '';
    position: absolute;
    width: 2rpx;
    height: 80%;
    top: 10%;
    background: #cecece;
    right: 0;
}

.footer .item view:first-child {
    color: #818181;
    font-weight: 500;
    margin-bottom: 10rpx;
}

.footer .item view:last-child {
    font-size: 34rpx;
    color: #d41e2f;
    font-weight: 500;
}

.block {
    height: 30rpx;
}