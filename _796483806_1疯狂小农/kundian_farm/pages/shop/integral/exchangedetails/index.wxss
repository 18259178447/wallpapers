@import "../../../../../__wuBaseWxss__/1.wxss";

.swiperS {
    width: 100%;
    height: 700rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

page .wx-swiper-dots {
    bottom: 30rpx;
}

page .wx-swiper-dot {
    background: #fff;
    width: 20rpx;
    height: 13rpx;
    border-radius: 8rpx;
}

page .wx-swiper-dot.wx-swiper-dot-active {
    width: 40rpx;
    height: 13rpx;
    border-radius: 8rpx;
}

.proInfo {
    padding: 20rpx;
    font-size: 28rpx;
}

.proDetail {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-top: 1rpx solid #a6a6a6;
    border-bottom: 1rpx solid #a6a6a6;
    font-size: 30rpx;
}

.Exchange_wrapper {
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
}

.Exchange {
    width: 100%;
    background-color: #fc8535;
    color: #fff;
    border-radius: 0rpx;
}

.Exchange::after {
    border: none;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 100%;
    height: 780rpx;
    position: fixed;
    z-index: 9999;
    background: #f9f9f9;
    border-radius: 15rpx 15rpx 0 0;
    transition: all .3s;
}

.show {
    bottom: 0;
    left: 0;
}

.hide {
    bottom: -1000rpx;
    left: 0;
}

.adoptImg {
    margin-top: -50rpx;
    margin-left: 30rpx;
    width: 220rpx;
    height: 250rpx;
    text-align: center;
}

.adoptImg image {
    width: 200rpx;
    height: 200rpx;
}

.adoptPrice {
    font-size: 46rpx;
    margin-left: 20rpx;
}

.chooseTime {
    margin-top: 25rpx;
    font-size: 30rpx;
    color: #383838;
}

.chooseNum {
    width: 100%;
    overflow-y: auto;
    height: 400rpx;
    border-top: 1rpx solid #e6e6e6;
    position: absolute;
    bottom: 80rpx;
    left: 0rpx;
}

.adoptTime {
    height: 65rpx;
    text-align: center;
    line-height: 65rpx;
    float: left;
    margin-left: 20rpx;
    border: 1rpx solid #d6d6d6;
    border-radius: 5rpx;
    font-size: 30rpx;
    color: #383838;
    margin-bottom: 20rpx;
    padding: 0 20rpx 0 20rpx;
}

.clickNumLift {
    border: 1rpx solid #d6d6d6;
    border-radius: 5rpx 0 0 5rpx;
    width: 90rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    color: #9e9e9e;
}

.clickNumRight {
    border: 1rpx solid #d6d6d6;
    border-radius: 0 5rpx 5rpx 0;
    width: 90rpx;
    height: 60rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
    color: #9e9e9e;
}

.chooseN {
    width: 200rpx;
    height: 60rpx;
    border: 1rpx solid #d6d6d6;
    border-radius: 0rpx;
    font-size: 30rpx;
    color: #9e9e9e;
    text-align: center;
    line-height: 60rpx;
}

.confrim {
    width: 100%;
    height: 80rpx;
    color: #fff;
    background-color: #fc8535;
    text-align: center;
    line-height: 80rpx;
    font-size: 34rpx;
    position: absolute;
    bottom: 0;
}

.active {
    background: #fc8535;
    color: white;
}