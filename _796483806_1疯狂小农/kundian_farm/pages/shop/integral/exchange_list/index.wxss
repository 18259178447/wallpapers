page {
    background-color: #f4f4f4;
}

.type_container {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
}

.block {
    height: 90rpx;
}

.typeTitle {
    width: 80%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.Triangle {
    width: 0;
    height: 0;
    border-width: 5px;
    border-style: solid;
    border-color: #999 transparent transparent transparent;
}

.upTriangle {
    width: 0;
    height: 0;
    border-width: 5px;
    border-style: solid;
    border-color: transparent transparent #999 transparent;
}

.Triangles {
    width: 0;
    height: 0;
    border-width: 5px;
    border-style: solid;
    border-color: #fc8535 transparent transparent transparent;
}

.upTriangles {
    width: 0;
    height: 0;
    border-width: 5px;
    border-style: solid;
    border-color: transparent transparent #fc8535 transparent;
}

.exchangeContent {
    width: 100%;
}

.Content {
    width: 48%;
    margin-left: 1.33%;
    margin-top: 10rpx;
    background-color: #fff;
    float: left;
    border-radius: 10rpx;
    overflow: hidden;
}

.item_wrapper {
    padding: 10rpx 20rpx 20rpx;
    box-sizing: border-box;
}

.Contentimage {
    width: 100%;
    height: 370rpx;
}

.goods-name {
    width: 100%;
    height: 80rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}