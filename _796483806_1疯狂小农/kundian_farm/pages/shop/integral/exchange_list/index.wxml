<view>
    <view class="type_container">
        <view class="f32 plt30 typeTitle">
            <view bindtap="sortPro" class="flex" data-name="综合" data-rank="1">
                <view class="{{currentType=='综合'?'cffc8535':''}}">综合</view>
                <view class="ml10">
                    <view class="{{currentType=='综合'&&sort?'upTriangles':'upTriangle'}}"></view>
                    <view class="mt5 {{currentType=='综合'&&!sort?'Triangles':'Triangle'}}"></view>
                </view>
            </view>
            <view bindtap="sortPro" class="flex" data-name="销量" data-rank="2">
                <view class="{{currentType=='销量'?'cffc8535':''}}">销量</view>
                <view class="ml10">
                    <view class="{{currentType=='销量'&&sort?'upTriangles':'upTriangle'}}"></view>
                    <view class="mt5 {{currentType=='销量'&&!sort?'Triangles':'Triangle'}}"></view>
                </view>
            </view>
            <view bindtap="sortPro" class="flex" data-name="价格" data-rank="3">
                <view class="{{currentType=='价格'?'cffc8535':''}}">价格</view>
                <view class="ml10">
                    <view class="{{currentType=='价格'&&sort?'upTriangles':'upTriangle'}}"></view>
                    <view class="mt5 {{currentType=='价格'&&!sort?'Triangles':'Triangle'}}"></view>
                </view>
            </view>
        </view>
    </view>
    <view class="block"></view>
    <view>
        <view class="exchangeContent clearfix">
            <view class="Content" wx:for="{{goodsData}}" wx:key="id">
                <image bindtap="intoGoodsDetail" class="Contentimage" data-goodsid="{{item.id}}" src="{{arr[index]?item.cover:'../../../../images/icon/loading.gif'}}"></image>
                <view class="item_wrapper">
                    <view class="f28 cf2b goods-name">{{item.goods_name}}</view>
                    <view class="f28 mt10 flexSb">
                        <view>
                            <text class="fb">{{item.price}}积分</text>
                            <text class="cf93 ml5"></text>
                        </view>
                        <image bindtap="intoGoodsDetail" class="iconSize" data-goodsid="{{item.id}}" src="../../../../images/icon/Shopping.png"></image>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
