page {
    font-size: 28rpx;
    background: #f4f4f4;
}

.verify-user {
    width: 94%;
    margin-left: 3%;
    background: white;
    height: 140rpx;
    border-radius: 10rpx;
    margin-top: 20rpx;
    padding: 20rpx 0 20rpx 0;
    color: gray;
}

.verify-user .v-top {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    margin-left: 20rpx;
}

.verify-user .time {
    height: 70rpx;
    line-height: 70rpx;
    margin-left: 20rpx;
}

.verify-user .v-top view {
    width: 46%;
}

.v-top .phone {
    text-align: right;
}

.verify-order {
    width: 94%;
    margin-left: 3%;
    height: 370rpx;
    padding: 20rpx 0 20rpx 0;
    background: white;
    border-radius: 10rpx;
    margin-top: 20rpx;
}

.verify-order .o-info {
    width: 96%;
    height: 70rpx;
    line-height: 70rpx;
    color: gray;
    margin-left: 20rpx;
}

.verify-order .o-info view {
    width: 48%;
}

.verify-order .o-info .o-val {
    text-align: right;
}

.verify-order .o-total {
    width: 92%;
    text-align: right;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1rpx solid #f4f4f4;
    margin-left: 3%;
}

.o-total .total-title {
    font-size: 30rpx;
    font-weight: bold;
}

.o-total .total-price {
    color: red;
    font-weight: bold;
}

.card_goods {
    width: 94%;
    margin: auto;
    overflow: hidden;
    margin-top: 20rpx;
    border-radius: 10rpx;
}

.goods_list {
    margin: 0rpx 20rpx 20rpx;
}

.goods_list .lists {
    margin-top: 20rpx;
    padding: 25rpx;
    background: #f5f5f5;
}

.card_information {
    width: 94%;
    margin: auto;
    border-bottom: 1px dashed #ddd;
}

.information_list {
    padding: 0 20rpx 20rpx;
}

.information_list .list_com {
    padding: 20rpx 0 0;
}

.headImg {
    height: 180rpx;
    width: 180rpx;
}

.verify-btn {
    width: 90%;
    height: 84rpx;
    margin-left: 5%;
    border-radius: 100rpx;
    line-height: 84rpx;
    text-align: center;
    color: white;
    background: #09BB07;
}

.footer-btn {
    width: 100%;
    height: 120rpx;
    margin-top: 30rpx;
}