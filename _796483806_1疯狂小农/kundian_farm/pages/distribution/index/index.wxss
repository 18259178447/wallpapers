@import "../../../../__wuBaseWxss__/1.wxss";

.head_container {
    width: 100%;
    background: #FBA15A;
    height: 180rpx;
}

.head_content {
    width: 90%;
    margin: 0 auto;
    display: flex;
    align-items: center;
    height: 100%;
}

.avator {
    width: 110rpx;
    height: 110rpx;
}

.info_title {
    flex: 1;
    color: #fff;
    font-size: 34rpx;
    letter-spacing: 3rpx;
    margin-left: 30rpx;
}

.recomment {
    margin-top: 10rpx;
    font-size: 30rpx;
}

.main_content {
    width: 100%;
}

.money_container {
    width: 90%;
    margin: 0rpx auto;
    color: #686868;
    letter-spacing: 4rpx;
    padding: 25rpx 0rpx;
}

.forward {
    font-size: 40rpx;
    color: #ef8139;
}

.success {
    font-size: 34rpx;
    margin-top: 10rpx;
}

.canforward {
    font-size: 30rpx;
    margin-right: 15rpx;
}

.forward_container {
    width: 90%;
    margin: 30rpx auto 0rpx;
    border-radius: 10rpx;
    height: 180rpx;
    background: linear-gradient(to right,#fba15a,#fc841e);
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 0 20rpx rgba(251,161,90,0.6);
}

.digit {
    width: 250rpx;
    height: 80rpx;
    box-sizing: border-box;
    background-color: #fff;
    font-size: 36rpx;
    letter-spacing: 3rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    text-align: center;
}

.allMoney {
    color: #fff;
    font-size: 30rpx;
    letter-spacing: 4rpx;
}

.confrim {
    font-size: 30rpx;
    color: #fff;
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 60rpx 0 0 60rpx;
    background-color: #fc6f24;
    text-align: center;
}

.menu_item {
    width: 33%;
    height: 180rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon-money {
    height: 50rpx;
    width: 50rpx;
}

.icon-order {
    height: 50rpx;
    width: 50rpx;
}

.icon-recode {
    height: 50rpx;
    width: 50.5rpx;
}

.icon-team {
    height: 50rpx;
    width: 50.5rpx;
}

.item_content {
    text-align: center;
    font-size: 30rpx;
    color: #5c5a5a;
    letter-spacing: 4rpx;
}

.myCode {
    width: 90%;
    margin: 30rpx auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.my_code {
    font-size: 32rpx;
    color: #232323;
    letter-spacing: 4rpx;
    margin-left: 30rpx;
}

.border-bottom {
    border-bottom: 1rpx solid #eeeeee;
}

.border-left {
    border-left: 1rpx solid #eeeeee;
}

.down {
    width: 30rpx;
    height: 30rpx;
}

.tixian {
    width: 100rpx;
    height: 50rpx;
    border: 1rpx solid #FBA15A;
    text-align: center;
    font-size: 26rpx;
    line-height: 50rpx;
    border-radius: 10rpx;
    color: #fba15a;
    float: right;
}