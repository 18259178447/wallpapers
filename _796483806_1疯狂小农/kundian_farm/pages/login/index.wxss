page {
    font-size: 30rpx;
    background: white;
}

.top {
    width: 90%;
    height: 300rpx;
    text-align: center;
    padding-top: 100rpx;
    border-bottom: 1rpx solid #f4f4f4;
    margin-left: 5%;
}

.top image {
    width: 200rpx;
    height: 200rpx;
    position: relative;
    top: 20rpx;
}

.top .login-title {
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    color: #09BB07;
    margin-top: 20rpx;
}

.top .tag {
    color: gray;
}

.btm {
    width: 80%;
    height: auto;
    margin-left: 10%;
    margin-top: 20rpx;
}

.btm .tag {
    width: 100%;
}

.btm .tag .oauth-title {
    color: #bfbfbf;
    height: 80rpx;
    line-height: 80rpx;
}

.btm .login {
    width: 100%;
    height: 94rpx;
    line-height: 94rpx;
    background: #09BB07;
    color: #fff;
    font-size: 30rpx;
    border-radius: 50rpx;
    margin-top: 30rpx;
}