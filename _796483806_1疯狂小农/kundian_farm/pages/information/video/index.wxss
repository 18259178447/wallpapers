.video {
    width: 100%;
    display: block;
}

.video-cover {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background: #5f5f5f;
    z-index: 4;
    overflow: hidden;
}

.playImg {
    width: 100%;
    height: 100%;
}

.header {
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #E6E6E6;
}

.title {
    font-size: 36rpx;
    color: #333;
    font-weight: 500;
    letter-spacing: 3rpx;
    line-height: 50rpx;
}

.dateTime {
    font-size: 28rpx;
    color: #C2C2C2;
    padding-left: 30rpx;
    position: relative;
    margin-top: 15rpx;
    line-height: 32rpx;
}

.dateTime::before {
    content: '';
    width: 6rpx;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    background: #39BE58;
}

.content {
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    line-height: 45rpx;
    letter-spacing: 3rpx;
    color: #5B5B5B;
}