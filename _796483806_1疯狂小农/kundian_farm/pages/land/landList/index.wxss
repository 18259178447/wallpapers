page {
    background: #f3f3f3;
}

.scroll_container {
    width: 100%;
    height: 100rpx;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 200;
}

.scrollView {
    height: 160rpx;
    white-space: nowrap;
    display: flex;
    font-size: 30rpx;
}

.item {
    text-align: center;
    padding: 28rpx 0rpx;
    display: inline-block;
    position: relative;
}

.item::before {
    content: '';
    display: block;
    width: 30%;
    height: 2px;
    position: absolute;
    bottom: 0;
    left: 0;
    background: currentColor;
    opacity: 0;
    transition: all 0.5s ease;
}

.actives {
    color: #16ba63;
}

.actives::before {
    width: 60%;
    left: 20%;
    opacity: 1;
    transition: all 0.3s ease;
}

.item view {
    padding: 0 80rpx;
    box-sizing: border-box;
}

.item:not(:last-child) view {
    border-right: 1rpx solid black;
}

.block {
    height: 110rpx;
}

.currentLand_wrapper {
    width: 94%;
    margin: 10rpx auto;
    padding-bottom: 110rpx;
}

.landItem {
    width: 100%;
    background: #fff;
    border-radius: 15rpx;
    padding-bottom: 20rpx;
}

.landItem:last-child {
    padding-bottom: 20rpx;
}

.img_wrapper {
    margin-top: 40rpx;
    width: 100%;
    position: relative;
    height: 350rpx;
}

.img_wrapper image {
    width: 100%;
    height: 350rpx;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
}

.area_wrappers {
    position: absolute;
    z-index: 99;
    bottom: 0;
    right: 0;
}

.landName {
    font-size: 32rpx;
    color: #363636;
    font-weight: 500;
    padding: 20rpx;
    box-sizing: border-box;
}

.landDesc {
    font-size: 30rpx;
    color: #353535;
    letter-spacing: 3rpx;
    line-height: 40rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.selectInfo {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx;
    box-sizing: border-box;
}

.selectInfo view {
    font-size: 30rpx;
    color: #525252;
    font-weight: 500;
}

.selectInfo view text {
    color: #C21B0E;
    font-size: 32rpx;
}

.block1 {
    height: 30rpx;
}

.none {
    width: 100%;
    height: 300rpx;
    text-align: center;
    margin-top: 150rpx;
}

.none image {
    width: 328rpx;
    height: 200rpx;
}

.none .tags {
    color: gray;
    font-size: 24rpx;
    display: block;
}