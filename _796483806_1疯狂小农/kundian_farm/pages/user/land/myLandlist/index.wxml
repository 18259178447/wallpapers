<view wx:if="{{plate==1}}">
    <scroll-view scrollX class="bg-white nav">
        <view class="flex text-center">
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==6?'text-green cur':''}}" data-index="6" style="color:{{currentIndex==6?farmSetData.background_color:''}};">
                全部
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==0?'text-green cur':''}}" data-index="0" style="color:{{currentIndex==0?farmSetData.background_color:''}};">
                待种植
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==4?'text-green cur':''}}" data-index="4" style="color:{{currentIndex==4?farmSetData.background_color:''}};">
                待播种
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==1?'text-green cur':''}}" data-index="1" style="color:{{currentIndex==1?farmSetData.background_color:''}};">
                已种植
            </view>
            <view bindtap="changeIndex" class="cu-item flex-sub {{currentIndex==2?'text-green cur':''}}" data-index="2" style="color:{{currentIndex==2?farmSetData.background_color:''}};">
                已过期
            </view>
        </view>
    </scroll-view>
    <view>
        <view class="land_item" wx:for="{{landData}}">
            <view class="expire" style="background:{{farmSetData.background_color}}" wx:if="{{item.status==2}}">已过期</view>
            <view class="userInfo">
                <view class="flex" style="width:70%;">
                    <image class="cu-avatar round" src="{{item.avatarurl}}" wx:if="{{item.avatar!='undefined'}}"></image>
                    <image class="cu-avatar round " src="../../../../images/icon/moren.png" wx:else></image>
                    <view class="text-df padding">{{item.username}}</view>
                </view>
                <view class="device_info" wx:if="{{farmSetData.is_open_webthing==1&&item.status==1}}">
                    <image bindtap="weeding" data-lid="{{item.id}}" src="../../../../images/icon/admin-chucao.png" wx:if="{{item.weeding_tag==1}}"></image>
                </view>
            </view>
            <view bindtap="intoLandDetail" class="landInfo" data-mineid="{{item.id}}">
                <image class="landAvator" src="{{item.cover}}"></image>
                <view class="ml30">
                    <view class="itemName">
                        <view>{{item.land_name}}</view>
                        <view class="area">{{item.count}}㎡
                        </view>
                    </view>
                    <view class="mt30">
                        <text class="f20">￥</text>{{item.total_price}}</view>
                </view>
            </view>
            <view class="state_container">
                <view class="item_container">
                    <view class="text-gray">状态</view>
                    <view class="mt20 f30" style="color:{{farmSetData.background_color}}" wx:if="{{item.status==0}}">未种植</view>
                    <view class="mt20 f30" style="color:{{farmSetData.background_color}}" wx:if="{{item.status==1}}">已种植</view>
                    <view class="mt20 f30" style="color:{{farmSetData.background_color}}" wx:if="{{item.status==2}}">已过期</view>
                </view>
                <view class="item_container">
                    <view class="text-gray">开始日期</view>
                    <view class="mt20 f30">{{item.create_time}}</view>
                </view>
                <view class="item_container">
                    <view class="text-gray">到期日期</view>
                    <view class="mt20 f30">{{item.exprie_time}}</view>
                </view>
            </view>
        </view>
    </view>
    <view class="block20"></view>
</view>
<view wx:if="{{plate==2}}">
    <view>
        <view class="land_item" wx:for="{{animalData}}">
            <view class="userInfo">
                <view class="flex" style="width:70%;">
                    <image class="cu-avatar round" src="{{item.avatarurl}}" wx:if="{{item.avatarurl!='undefined'}}"></image>
                    <image class="cu-avatar round" src="../../../../images/icon/moren.png" wx:else></image>
                    <view class="text-df padding">{{item.nickname}}</view>
                </view>
                <view class="device_info" wx:if="{{farmSetData.is_open_webthing==1&&item.status==1}}"></view>
            </view>
            <view bindtap="intoLandDetail" class="landInfo" data-adoptid="{{item.id}}">
                <image class="landAvator" src="{{item.animal_src}}"></image>
                <view class="ml30">
                    <view class="itemName">
                        <view>{{item.animal_name}}</view>
                        <view class="area">数量 ：{{item.count}}
                        </view>
                    </view>
                    <view class="mt30">
                        <text class="f20">￥</text>{{item.total_price}}</view>
                </view>
            </view>
            <view class="state_container">
                <view class="item_container">
                    <view class="text-gray">姓名</view>
                    <view style="color:{{farmSetData.background_color}}">
                        <view class="mt20 f26">{{item.username}}</view>
                    </view>
                </view>
                <view class="item_container">
                    <view class="text-gray">联系电话</view>
                    <view class="mt20 f26">{{item.phone}}</view>
                </view>
                <view class="item_container">
                    <view class="text-gray">领养时间</view>
                    <view class="mt20 f26">{{item.create_time}}</view>
                </view>
            </view>
        </view>
    </view>
    <view class="block20"></view>
</view>
