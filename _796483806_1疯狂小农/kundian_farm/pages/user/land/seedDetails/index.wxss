.swiper {
    width: 100%;
    height: 480rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}

page .wx-swiper-dot {
    width: 70rpx;
    height: 6rpx;
    border-radius: 0rpx;
}

.plantName {
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
