<view>
    <view class="identification">
        <view class="text">请填写当前账户本人真实信息</view>
        <view class="com">
            <view class="com_list name">
                <view class="com_text">姓名</view>
                <input bindblur="getNameValue" placeholder="请输入真实姓名" value="{{name}}"></input>
            </view>
        </view>
        <view class="com">
            <view class="com_list sfz">
                <view class="com_text">身份证</view>
                <input bindblur="getstatusValue" placeholder="请输入证件号码" value="{{id_card}}"></input>
            </view>
        </view>
        <button bindtap="submit" class="btn" disabled="{{disabled}}">确认</button>
        <view class="tips">
            <view class="title">
                <view>实名认证权益</view>
            </view>
            <view class="nr">
                <text class="iconfont icon-baohudun"></text>
                <view class="tips_text">
                    <view>保障账户安全</view>
                    <view>有效防止他人盗取账户资金</view>
                </view>
            </view>
        </view>
    </view>
</view>
