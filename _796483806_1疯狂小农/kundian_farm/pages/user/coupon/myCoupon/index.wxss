page {
    background-color: #EFEFEF;
}

.state_container {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #EFEFEF;
    display: flex;
    align-items: center;
    background-color: #fff;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.nav {
    width: 33.3%;
    height: 100%;
    font-size: 34rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav view {
    text-align: center;
    width: 100%;
}

.nav::before {
    content: '';
    display: block;
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: 0;
    left: 0;
    background: currentColor;
    opacity: 0;
    transition: all 0.3;
}

.nav:not(:last-child) view {
    border-right: 1rpx solid #EFEFEF;
}

.active {
    color: #FC8535;
}

.active::before {
    opacity: 1;
    transition: all 0.3s;
    left: 0;
    bottom: 0;
}

.block {
    height: 130rpx;
}

.coupon {
    width: 94%;
    margin: 0 auto 25rpx;
    border-radius: 20rpx;
    background-color: #fff;
    overflow: hidden;
}

.coupon_desc {
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #fff;
    font-size: 30rpx;
    letter-spacing: 3rpx;
}

.isGet {
    background-color: #B5B5B5;
}

.noGet {
    background: linear-gradient(to right,#abe09e,#6ddda5);
}

.getCoupon {
    width: 200rpx;
    height: 60rpx;
    border-radius: 35rpx;
    background-color: #fff;
    color: #FE874F;
    font-size: 32rpx;
    text-align: center;
    line-height: 60rpx;
    box-shadow: 0rpx 0rpx 4rpx rgba(0,0,0,0.1);
}

.hasCoupon {
    width: 200rpx;
    height: 60rpx;
    border-radius: 35rpx;
    background-color: #fff;
    color: #B5B5B5;
    font-size: 32rpx;
    text-align: center;
    line-height: 60rpx;
    box-shadow: 0rpx 0rpx 4rpx rgba(0,0,0,0.1);
}

.f60 {
    font-size: 60rpx;
}

.bottom_container {
    width: 100%;
    position: relative;
    padding: 30rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    color: #6C6C6C;
    letter-spacing: 3rpx;
}

.radio_contianer {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    left: 0;
    top: -10rpx;
}

.dots {
    width: 25rpx;
    height: 25rpx;
    border-radius: 50%;
    background-color: #fff;
}

.none {
    width: 100%;
    height: 300rpx;
    text-align: center;
}

.none image {
    width: 400rpx;
    height: 230rpx;
    margin-top: 130rpx;
}

.none .tags {
    color: gray;
    font-size: 24rpx;
    display: block;
}