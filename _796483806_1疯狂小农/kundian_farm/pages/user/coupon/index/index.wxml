<view>
    <view class="type_container">
        <view bindtap="changeType" class="view {{currenType==1?'select':''}}" data-index="{{1}}">
            <view class="models {{currenType==1?'positio2':'position1'}}" style="background:{{currenType==1?farmSetData.background_color:''}}"></view>
            <view class="inner_container">
                <text class="iconfont icon-store f44 store" style="color:{{currenType==1?'white':'gray'}}"></text>
                <view class="mt10">商城</view>
            </view>
        </view>
        <view bindtap="changeType" class="view {{currenType==2?'select':''}}" data-index="{{2}}">
            <view class="models {{currenType==2?'positio2':'position1'}}" style="background:{{currenType==2?farmSetData.background_color:''}}"></view>
            <view class="inner_container">
                <text class="iconfont icon-tuandui f44 store" style="color:{{currenType==2?'white':'gray'}}"></text>
                <view class="mt10">组团</view>
            </view>
        </view>
        <view bindtap="changeType" class="view {{currenType==3?'select':''}}" data-index="{{3}}">
            <view class="models {{currenType==3?'positio2':'position1'}}" style="background:{{currenType==3?farmSetData.background_color:''}}"></view>
            <view class="inner_container">
                <text class="iconfont icon-jiaoyin f44 store" style="color:{{currenType==3?'white':'gray'}}"></text>
                <view class="mt10">认养</view>
            </view>
        </view>
        <view bindtap="changeType" class="view {{currenType==4?'select':''}}" data-index="{{4}}">
            <view class="models {{currenType==4?'positio2':'position1'}}" style="background:{{currenType==4?farmSetData.background_color:''}}"></view>
            <view class="inner_container">
                <text class="iconfont icon-tudi1 f44 store" style="color:{{currenType==4?'white':'gray'}}"></text>
                <view class="mt10">土地</view>
            </view>
        </view>
        <view bindtap="changeType" class="view {{currenType==5?'select':''}}" data-index="{{5}}">
            <view class="models {{currenType==5?'positio2':'position1'}}" style="background:{{currenType==5?farmSetData.background_color:''}}"></view>
            <view class="inner_container">
                <text class="iconfont icon-shumiao f44 store" style="color:{{currenType==5?'white':'gray'}}"></text>
                <view class="mt10">种子</view>
            </view>
        </view>
    </view>
    <view class="block"></view>
    <view wx:if="{{couponData!=''}}">
        <view class="coupon" wx:if="{{item.id}}" wx:for="{{couponData}}" wx:key="id">
            <view class="coupon_desc {{item.isget==0?'isGet':'noGet'}}">
                <view class="flex">
                    <view class="f60">
                        <text class="f30">￥</text>{{item.coupon_price}}</view>
                    <view class="ml20">
                        <view>{{item.coupon_name}}</view>
                        <view class="mt10">满{{item.low_cash_price}}可用</view>
                    </view>
                </view>
                <view class="hasCoupon" wx:if="{{item.isget==0}}">已领取</view>
                <view bindtap="getCoupon" class="getCoupon" data-cid="{{item.id}}" wx:else>立即领取</view>
            </view>
            <view class="bottom_container">
                <view class="radio_contianer">
                    <view class="dots" wx:for="{{18}}" wx:key="id"></view>
                </view>
                <view>
                    <view wx:if="{{item.expiry_date==1}}">到期时间: 领取后{{item.expiry_day}}天到期</view>
                    <view wx:if="{{item.expiry_date==2}}">到期时间: {{item.begin_time}}~{{item.end_time}}</view>
                    <view class="mt10">可用范围: {{item.type_chinese_name}}</view>
                </view>
            </view>
        </view>
    </view>
    <view class="none" wx:else>
        <image src="../../../../images/icon/none-coupon.png"></image>
        <text class="tags">暂时还没有优惠券哦！</text>
    </view>
</view>
