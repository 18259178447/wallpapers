page {
    background: #EFEFEF;
}

.radio_containre {
    width: 94%;
    height: 100rpx;
    background: #fff;
    margin: 20rpx auto;
    text-align: center;
    font-size: 36rpx;
    color: #3D3D3D;
    letter-spacing: 5rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 5rpx;
}

.radio {
    transform: scale(0.7);
    margin-left: 10rpx;
}

.coupon {
    width: 94%;
    margin: 0 auto 25rpx;
    border-radius: 20rpx;
    background-color: #fff;
    overflow: hidden;
}

.coupon_desc {
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #fff;
    font-size: 30rpx;
    letter-spacing: 3rpx;
}

.isGet {
    background-color: #B5B5B5;
}

.noGet {
    background: linear-gradient(to right,rgba(255,161,79,1),rgba(255,119,88,1));
}

.getCoupon {
    width: 200rpx;
    height: 60rpx;
    border-radius: 35rpx;
    background-color: #fff;
    color: #FE874F;
    font-size: 32rpx;
    text-align: center;
    line-height: 60rpx;
    box-shadow: 0rpx 0rpx 4rpx rgba(0,0,0,0.1);
}

.hasCoupon {
    width: 200rpx;
    height: 60rpx;
    border-radius: 35rpx;
    background-color: #fff;
    color: #B5B5B5;
    font-size: 32rpx;
    text-align: center;
    line-height: 60rpx;
    box-shadow: 0rpx 0rpx 4rpx rgba(0,0,0,0.1);
}

.f60 {
    font-size: 60rpx;
}

.bottom_container {
    width: 100%;
    position: relative;
    padding: 30rpx;
    box-sizing: border-box;
    font-size: 30rpx;
    color: #6C6C6C;
    letter-spacing: 3rpx;
}

.radio_contianer {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: absolute;
    left: 0;
    top: -10rpx;
}

.dots {
    width: 25rpx;
    height: 25rpx;
    border-radius: 50%;
    background-color: #fff;
}

.noUse {
    color: #FF3939;
}

.block {
    height: 20rpx;
}