@import "../../../../__wuBaseWxss__/1.wxss";

page {
    font-size: 28rpx;
    background: #f8f8f8;
}

.container {
    width: 100%;
    height: 100%;
    border-top: 1rpx solid #f4f4f4;
}

.add-ul {
    width: 96%;
    height: auto;
    background: white;
    margin-bottom: 20rpx;
    padding-top: 20rpx;
    margin-left: 2%;
    margin-top: 20rpx;
    border-radius: 15rpx;
}

.select-add {
    width: 100%;
    height: auto;
    background: white;
    margin-bottom: 20rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.select-add .phone {
    width: 42%;
    text-align: right;
}

.add-ul .icon-delete1 {
    position: absolute;
    left: 91%;
    font-size: 44rpx;
    color: gray;
    margin-top: -13rpx;
}

.info {
    height: 60rpx;
    line-height: 60rpx;
    width: 95%;
    padding-left: 5%;
}

.info .phone {
    margin-left: 20rpx;
}

.address {
    margin-left: 5%;
}

.opration {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-top: 1rpx solid #f4f4f4;
    margin-top: 35rpx;
    color: gray;
}

radio {
    transform: scale(0.7);
}

radio-group {
    width: 89%;
}

.radio {
    margin-left: 4%;
}

.footer-btn {
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    background: #f8f8f8;
}

.footer-btn .btn {
    width: 40%;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 7%;
}

.footer-btn .iconfont {
    font-size: 28rpx;
}

.bomx-contain {
    width: 100%;
    height: 100%;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    background: black;
    opacity: 0.5;
    z-index: 9;
}

.box {
    width: 86%;
    margin-left: 7%;
    height: 580rpx;
    background: white;
    z-index: 999;
    position: fixed;
    top: 10%;
    border-radius: 10rpx;
}

.box .box-title {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #f4f4f4;
    text-align: center;
    font-size: 30rpx;
}

.box .icon-delete1 {
    position: absolute;
    left: 90%;
    color: gray;
    font-size: 40rpx;
}

.box .info-input {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
}

.info-input .input {
    width: 45%;
    margin-left: 5%;
    height: 100%;
}

.input input {
    height: 100%;
    width: 90%;
}

.btm-border {
    border-bottom: 1rpx solid #f4f4f4;
}

.b-right {
    border-right: 1rpx solid #f4f4f4;
}

.region {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
}

.region picker {
    width: 87%;
    margin-left: 5%;
}

.detail-add {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}

.detail-add .detail-input {
    width: 87%;
    margin-left: 5%;
}

.detail-input input {
    width: 90%;
    height: 100%;
}

.box .btn {
    width: 90%;
    height: 80rpx;
    margin-top: 50rpx;
    margin-left: 5%;
}

.dis-btm {
    width: 100%;
    height: 120rpx;
    text-align: center;
    color: gray;
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
        transform: scale(0.2);
    }

    50% {
        opacity: 0;
        transform: scale(0.5);
    }

    100% {
        opacity: 1;
        transform: scale(1);
    }
}

.box {
    -webkit-animation-name: fadeIn;
    -webkit-animation-duration: 0.5s;
    -webkit-animation-iteration-count: 1;
    -webkit-animation-delay: 0s;
}