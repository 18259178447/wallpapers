<view>
    <view class="head_container" style="background: linear-gradient(to right, {{farmSetData.background_color}}, {{farmSetData.assist_color}});"></view>
    <view class="addInfo_container">
        <view class="addTitle">填写信息</view>
        <view class="mt30">
            <form bindsubmit="submitInfo">
                <view class="input_container">
                    <input name="card_num" placeholder="请输入卡号" type="text" value="{{card_num}}"></input>
                </view>
                <view class="input_container">
                    <input name="card_pwd" password="true" placeholder="请输入密码" type="text" value="{{card_pwd}}"></input>
                </view>
                <button class="confrim cu-btn round bg-green button-hover" formType="submit" style="background: linear-gradient(to right, {{farmSetData.background_color}}, {{farmSetData.assist_color}});">立即兑换</button>
            </form>
        </view>
    </view>
    <view class="record_title">兑换记录</view>
    <view class="list_container" wx:for="{{records}}" wx:key="id">
        <image class="recordIcon" src="{{icon.recordIcon}}"></image>
        <view class="items">
            <view class="list_title">卡号{{item.card_num}}兑换成功</view>
            <view class="list_time">{{item.use_time}}-{{item.expire_time}}</view>
        </view>
    </view>
</view>
