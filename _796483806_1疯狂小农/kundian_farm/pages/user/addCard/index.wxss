.head_container {
    width: 100%;
    height: 350rpx;
    background: linear-gradient(to top,#fc8535,#fc8b3f);
}

.addInfo_container {
    width: 95%;
    margin: -200rpx auto 0;
    background-color: #fff;
    border-radius: 20rpx;
    box-shadow: 2rpx -1rpx 10rpx rgba(100,100,100,0.3);
    padding: 50rpx;
    box-sizing: border-box;
}

.addTitle {
    font-size: 34rpx;
    letter-spacing: 3rpx;
    color: #121212;
}

.input_container {
    width: 100%;
    padding: 15rpx 0rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    margin-bottom: 10rpx;
    border-radius: 10rpx;
    background: #f4f4f4;
}

.input_container input {
    font-size: 30rpx;
    width: 90%;
}

.confrim {
    width: 70%;
    letter-spacing: 8rpx;
    font-size: 32rpx;
    margin-top: 20rpx;
    margin-left: 15%;
}

.record_title {
    width: 100%;
    margin-top: 30rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #f0f0f0;
    line-height: 100rpx;
    font-size: 34rpx;
    letter-spacing: 3rpx;
}

.list_container {
    width: 90%;
    margin: 30rpx auto 0rpx;
    display: flex;
    align-items: center;
}

.items {
    width: 540rpx;
    border-bottom: 1rpx solid #ebebeb;
    margin-left: 30rpx;
    padding-bottom: 20rpx;
    letter-spacing: 3rpx;
}

.recordIcon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.list_title {
    font-size: 30rpx;
    color: #333;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list_time {
    font-size: 28rpx;
    color: #b5b5b5;
    margin-top: 20rpx;
}