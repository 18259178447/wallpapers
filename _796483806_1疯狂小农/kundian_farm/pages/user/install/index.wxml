<view>
    <view class="install">
        <view bindtap="phone" class="install_com">
            <view class="com_name">修改手机号</view>
            <view class="com">
                {{phone}}
                <text class="iconfont icon-right right-icon"></text>
            </view>
        </view>
        <view bindtap="real_name" class="install_com">
            <view class="com_name">实名制认证</view>
            <view class="com">
                <text class="iconfont icon-right right-icon"></text>
            </view>
        </view>
        <view class="install_com">
            <button class="open-set flex" openType="openSetting">
                <view class="com_name" style="width:96%;">微信授权管理</view>
                <view class="com">
                    <text class="iconfont icon-right right-icon"></text>
                </view>
            </button>
        </view>
        <view class="install_com">
            <button class="open-set flex" openType="feedback">
                <view class="com_name" style="width:96%;">反馈</view>
                <view class="com">
                    <text class="iconfont icon-right right-icon"></text>
                </view>
            </button>
        </view>
        <view bindtap="intoDesc" class="install_com abstract">
            <view class="com_name">关于智慧农场</view>
            <view class="com">
                <text class="iconfont icon-right right-icon"></text>
            </view>
        </view>
    </view>
</view>
