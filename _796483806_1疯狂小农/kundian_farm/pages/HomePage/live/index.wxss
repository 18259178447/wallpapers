@import "../../../../__wuBaseWxss__/1.wxss";

.changTab {
    width: 100%;
    padding: 30rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 32rpx;
    color: #97979b;
    height: 100rpx;
    overflow: hidden;
}

.clfc8535 {
    color: #fc8535;
}

.liveName {
    font-size: 32rpx;
    color: #fc8535;
    text-align: center;
    line-height: 75rpx;
}

.block20 {
    height: 20rpx;
    background-color: #f0eff4;
}

.Regional {
    width: 100%;
    padding: 20rpx 20rpx 0rpx;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
}

.liveContent {
    width: 48%;
    margin: 0rpx 1% 20rpx;
    float: left;
    text-align: center;
}

.lives {
    height: 250rpx;
    border-radius: 10rpx;
    position: relative;
}

.live-play {
    width: 100%;
}

.liveBg {
    width: 100%;
    height: 100%;
}

.model {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    text-align: center;
    line-height: 280rpx;
}

.player {
    width: 70rpx;
    height: 70rpx;
}

.liveNames {
    font-size: 32rpx;
    line-height: 65rpx;
}

.scrollView {
    white-space: nowrap;
    display: flex;
    font-size: 30rpx;
    height: 150rpx;
}

.item {
    width: 200rpx;
    text-align: center;
    display: inline-block;
    position: relative;
    line-height: 90rpx;
    padding-top: 25rpx;
}

.live_wrapper {
    width: 120%;
    height: 100%;
    position: absolute;
    left: -10%;
}

.main_wrapper {
    width: 80%;
    margin: 0 auto;
    padding-bottom: 110rpx;
}

.player-img {
    width: 120rpx;
    height: 120rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.is_loading {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.is_loading .loadCover {
    width: 60rpx;
    height: 60rpx;
    animation: cycle 3s infinite;
}

.is_loading .loadCover .loadingimg {
    width: 100%;
    height: 100%;
}

@keyframes cycle {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}