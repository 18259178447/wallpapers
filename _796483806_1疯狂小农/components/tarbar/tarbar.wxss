.footer {
    width: 100%;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 24rpx;
    height: 50px;
    border-top: 1rpx solid #C8C8C8;
    text-align: center;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 99999999999999999999999999999;
}

.footer .f-li {
    width: 50px;
}

.footer .f-li image {
    width: 25px;
    height: 25px;
    display: block;
    margin: 0 auto;
}

.footer .f-li text {
    display: block;
}