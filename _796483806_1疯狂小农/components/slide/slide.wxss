.slide {
    position: relative;
}

.dots {
    width: 100%;
    height: 30rpx;
    position: absolute;
    left: 0;
    bottom: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.dot {
    width: 20rpx;
    height: 12rpx;
    background: #fff;
    margin: 0 8rpx;
    border-radius: 6rpx;
}

.active {
    width: 45rpx;
}