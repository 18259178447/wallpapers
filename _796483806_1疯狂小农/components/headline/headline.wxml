<view bindtap="navToPage" class="title-wrapper" data-appid="{{appid}}" data-linkparam="{{linkparam}}" data-linktype="{{linktype}}" style="color:{{fontColor}}; font-size:{{fontSize*2}}rpx; background:{{bgColor}}; padding:{{padTb}}px {{padLr}}px; text-align: {{align}}">
    <view class="title" style="color:{{fontColor}};text-align: {{align}}">
        <text class="iconfont {{icon}}"></text> {{text}}</view>
    <view class="route-wrapper" wx:if="{{linktype}}">
        <view class="more">更多</view>
        <view class="iconfont icon-right"></view>
    </view>
</view>
