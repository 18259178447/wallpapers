<view bindtap="gotoVideoDetail" class="article-content" data-id="{{info.id}}">
    <view class="article-title">{{info.title}}</view>
    <view class="img-wrapper">
        <image lazyLoad="true" src="{{info.cover}}"></image>
        <view class="img-mask">
            <view class="playIcon iconfont icon-play1"></view>
        </view>
    </view>
    <view class="article-time">
        <view>{{info.create_time}}</view>
        <view>
            <text class="iconfont icon-visited"></text>
            <text>{{info.view_count}}</text>
        </view>
    </view>
</view>
