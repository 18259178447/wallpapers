.content {
    width: 100%;
    padding: 15rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 430rpx;
}

.mian {
    width: 49%;
    height: 100%;
    border-radius: 15rpx;
    overflow: hidden;
}

.sub-content {
    width: 49%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.subItem {
    height: 48%;
    width: 100%;
    border-radius: 15rpx;
    overflow: hidden;
}

.mian-img,.sub-img {
    width: 100%;
    height: 100%;
}

.ad-content {
    width: 100%;
    padding: 15rpx 30rpx;
    box-sizing: border-box;
}

.single {
    width: 100%;
    height: 228rpx;
    border-radius: 15rpx;
    overflow: hidden;
}

.single:not(:last-child) {
    margin-bottom: 15rpx;
}

.single image {
    width: 100%;
    height: 100%;
}

.wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    margin-top: 15rpx;
}

.wrapper-item {
    width: 32%;
    height: 221rpx;
    border-radius: 15rpx;
    overflow: hidden;
}

.wrapper-item:not(:last-child) {
    margin-right: 2%;
}

.wrapper-item image {
    width: 100%;
    height: 100%;
}

.other-wrapper {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    overflow: hidden;
}

.wrapper-items {
    width: 49%;
    height: 338rpx;
    border-radius: 15rpx;
    overflow: hidden;
    margin-bottom: 15rpx;
}

.wrapper-items:nth-last-child(1),.wrapper-items:nth-last-child(2) {
    margin-bottom: 0rpx;
}

.wrapper-items image {
    width: 100%;
    height: 100%;
}