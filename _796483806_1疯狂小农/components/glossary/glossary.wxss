.content {
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #f4f4f4;
}

.contents {
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #f4f4f4;
}

.contents .images {
    width: 100%;
}

.content .image {
    width: 180rpx;
    height: 180rpx;
}

.text_content {
    flex: 1;
    margin-left: 20rpx;
}

.text_contents {
    flex: 1;
}

.innerText {
    font-size: 24rpx;
    margin-top: 20rpx;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    letter-spacing: 4rpx;
}