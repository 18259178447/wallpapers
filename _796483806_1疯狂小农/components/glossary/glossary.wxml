<view wx:if="{{styles===1}}">
    <view bindtap="navToPage" class="content" data-appid="{{item.appid}}" data-linkparam="{{item.link_param}}" data-linktype="{{item.link_type}}" style="background:{{bgColor}}" wx:for="{{lists}}" wx:key="id">
        <image class="image" lazyLoad="true" src="{{item.img}}"></image>
        <view class="text_content">
            <view style="font-size:{{titleSize*2}}rpx; color:{{titleColor}}">{{item.title}}</view>
            <view class="innerText">{{item.innerText}}</view>
        </view>
    </view>
</view>
<view wx:if="{{styles===2}}">
    <view bindtap="navToPage" class="contents" data-appid="{{item.appid}}" data-linkparam="{{item.link_param}}" data-linktype="{{item.link_type}}" style="background:{{bgColor}}" wx:for="{{lists}}">
        <image class="images" lazyLoad="true" src="{{item.img}}"></image>
        <view class="text_contents">
            <view style="font-size:{{titleSize*2}}rpx; color:{{titleColor}}">{{item.title}}</view>
            <view class="innerText">{{item.innerText}}</view>
        </view>
    </view>
</view>
