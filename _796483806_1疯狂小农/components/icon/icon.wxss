.iconWrapper {
    display: flex;
    flex-wrap: wrap;
    width: 750rpx;
    height: auto;
    position: relative;
}

.swiper_item {
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
}

.icon1 {
    width: 50%;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon1 .icon_content {
    width: 250rpx;
    text-align: center;
}

.icon1 image {
    width: 150rpx;
    height: 150rpx;
}

.icon2 {
    width: 33.3%;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon2 .icon_content {
    width: 250rpx;
    text-align: center;
}

.icon2 image {
    width: 130rpx;
    height: 130rpx;
}

.icon3 {
    width: 25%;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon3 .icon_content {
    width: 250rpx;
    text-align: center;
}

.icon3 image {
    width: 120rpx;
    height: 120rpx;
}

.icon4 {
    width: 20%;
    height: 180rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 10rpx;
}

.icon4 .icon_content {
    width: 250rpx;
    text-align: center;
}

.icon4 image {
    width: 100rpx;
    height: 100rpx;
}

.dots {
    position: absolute;
    width: 100%;
    height: 35rpx;
    left: 0;
    bottom: 0rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.dot {
    width: 70rpx;
    height: 13rpx;
    border-radius: 6rpx;
    background: #D5D8DF;
    position: sticky;
}

.dot:not(:first-child) {
    margin-left: -10rpx;
}

.active {
    background: #69A84F;
    z-index: 20;
}

.text {
    color: #7B7B7B;
}