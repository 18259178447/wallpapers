<view bindtap="gotoVideoDetail" class="article-content1" data-id="{{info.id}}" wx:if="{{info.mode==0}}">
    <view class="article-info">
        <view class="article-title">{{info.title}}</view>
        <view class="info-date">
            <view>{{info.create_time}}</view>
            <view>
                <text class="iconfont icon-visited"></text>
                <text>{{info.view_count}}</text>
            </view>
        </view>
    </view>
    <image lazyLoad="true" src="{{info.cover}}"></image>
</view>
<view bindtap="gotoVideoDetail" class="article-content2" data-id="{{info.id}}" wx:if="{{info.mode==1}}">
    <view class="article-title">{{info.title}}</view>
    <image lazyLoad="true" src="{{info.cover}}"></image>
    <view class="article-time">
        <view>{{info.create_time}}</view>
        <view>
            <text class="iconfont icon-visited"></text>
            <text>{{info.view_count}}</text>
        </view>
    </view>
</view>
