.content {
    width: 100%;
    padding: 10rpx 30rpx 30rpx;
    box-sizing: border-box;
}

.main1 {
    width: 100%;
    height: 410rpx;
    box-shadow: 0 0 15rpx rgba(0,0,0,0.15);
    border-radius: 15rpx;
    position: relative;
}

.main1:not(:last-child) {
    margin-bottom: 30rpx;
}

.crow-bg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 15rpx;
}

.zIndex1 {
    z-index: 1;
}

.zIndex2 {
    z-index: 2;
}

.item-rate {
    font-size: 56rpx;
    font-weight: 500;
    color: #FF8423;
    text-align: center;
    position: absolute;
    top: 60rpx;
    left: 50%;
    transform: translateX(-50%);
}

.item-desc {
    font-size: 28rpx;
    text-align: center;
    color: #96989E;
    position: absolute;
    left: 50%;
    top: 180rpx;
    transform: translateX(-50%);
}

.item-desterm {
    font-size: 28rpx;
    text-align: center;
    color: #96989E;
    position: absolute;
    left: 50%;
    top: 250rpx;
    transform: translateX(-50%);
}

.item-desterm text {
    color: #303030;
}

.join {
    width: 60%;
    position: absolute;
    bottom: 30rpx;
    left: 20%;
    height: 70rpx;
    line-height: 70rpx;
    color: #fff;
    border-radius: 37rpx;
    border: none;
    text-align: center;
    font-size: 32rpx;
    letter-spacing: 3rpx;
    background: linear-gradient(to bottom,#FFB95C,#FC7F42);
}

.join::after {
    border: none;
}

.mian2 {
    width: 100%;
    padding: 30rpx;
    box-shadow: 0 0 15rpx rgba(0,0,0,0.15);
    border-radius: 15rpx;
    box-sizing: border-box;
}

.mian2:not(:last-child) {
    margin-bottom: 20rpx;
}

.item-name {
    font-size: 32rpx;
    font-weight: 500;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 30rpx 0;
}

.item {
    font-size: 26rpx;
    color: #9C9C9C;
    text-align: center;
}

.item view:first-child {
    font-size: 40rpx;
    margin-bottom: 5rpx;
    color: #333333;
    letter-spacing: 2rpx;
}

.item:first-child view:first-child {
    color: #FA565D;
}

.progress-wrapper {
    width: 100%;
    height: 10rpx;
    border-radius: 5rpx;
    background: #EEEEEE;
    overflow: hidden;
    position: relative;
}

.progress {
    height: 100%;
    width: 0;
    position: absolute;
    top: 0;
    left: 0;
    background: #3678FA;
}

.money-wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    color: #999999;
    margin-top: 20rpx;
}